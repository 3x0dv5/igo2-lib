@require '../../../style/var.styl';

:host {
  position: relative;
  display: block;
}

mat-form-field {
  width: 100%;
}

input {
  padding-left: 10px;
  padding-right: $igo-icon-size;
}

input.hasSearchIcon {
  padding-right: "calc(%s * 2)" % $igo-icon-size;
}


.searchButtonDiv {
  position: absolute;
  right: 0;
  top: 0;
  & > button:nth-child(2)::before {
    content: "";
    position: absolute;
    left: 0px;
    top: 5px;
    border-right: 1px solid #ddd;
    height: 28px;
  }
}
